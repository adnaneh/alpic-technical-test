{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "api",
      "source": {
        "repo": ".",
        "branch": "main"
      },
      "build": {
        "buildCommand": "cd api && npm ci && npm run build",
        "watchPatterns": [
          "api/**"
        ]
      },
      "deploy": {
        "startCommand": "cd api && npm run start:prod",
        "healthcheckPath": "/",
        "healthcheckTimeout": 30
      },
      "envVars": {
        "NODE_ENV": "production",
        "PORT": {
          "type": "RAILWAY",
          "value": "${{RAILWAY_TCP_PROXY_PORT}}"
        }
      }
    },
    {
      "name": "web",
      "source": {
        "repo": ".",
        "branch": "main"
      },
      "build": {
        "buildCommand": "cd web && npm ci && npm run build",
        "watchPatterns": [
          "web/**"
        ]
      },
      "deploy": {
        "startCommand": "cd web && npm run start",
        "healthcheckPath": "/",
        "healthcheckTimeout": 30
      },
      "envVars": {
        "NODE_ENV": "production",
        "NEXT_PUBLIC_API_URL": {
          "type": "REFERENCE",
          "value": "${{api.RAILWAY_PUBLIC_DOMAIN}}"
        },
        "NEXT_PUBLIC_WS_URL": {
          "type": "REFERENCE",
          "value": "${{api.RAILWAY_PUBLIC_DOMAIN}}"
        }
      }
    }
  ]
}